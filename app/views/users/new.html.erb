<h1> Sign up for Puppy Pals! </h1>

<% if flash[:user_errors] %>
  <% flash[:user_errors].each do |error| %>
    <p style='color: red;'><%= error %></p>
  <% end %>
<% end %>
<body>
<%= form_for @user do |f| %>
<%= f.label :username %>
<%= f.text_field :username %>
<br/>
<%= f.label :password %>
<%= f.text_field :password %>
<br/>
<%= f.submit %>
<%end%>
</body>


