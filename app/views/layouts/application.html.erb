<!DOCTYPE html>
<html>
  <head>
    <title>Puppy Pals!</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

      <ul>

        <% if @current_user %>
          <li class='right'> Welcome <strong> <%=  @current_user.username %></strong></li>                    
          <li class='right'><%= link_to "Log-Out", logout_path, method: :delete %></li>
          <li><%= link_to 'User Home', user_path(@current_user) %></li>
          <li><%= link_to 'Book a New Session', new_appointment_path %></li>
          <li><%= link_to 'See all the Dogs', dogs_path %></li>
        <% else %>
          <li class='right'><%= link_to 'Sign-up', new_user_path %></li>
          <li class='right'><%= link_to 'Login', new_login_path %></li>
          <li class='right'><%= link_to 'See all the dogs', dogs_path %></li>
        <% end %>
      </ul>

    <%= yield %>
  </body>
</html>
